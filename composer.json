{
    "name": "kafka-aiven/poc-schema-registry",
    "description": "Filesystem-based Avro schema management library for Kafka",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "flix-tech/avro-serde-php": "^1.0",
        "jobcloud/php-kafka-lib": "^1.7",
        "symfony/yaml": "^6.0|^7.0",
        "symfony/console": "^6.0|^7.0",
        "symfony/dependency-injection": "^6.0|^7.0",
        "symfony/config": "^6.0|^7.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "phpstan/phpstan": "^1.10",
        "vimeo/psalm": "^5.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "symfony/var-dumper": "^6.0|^7.0",
        "mikey179/vfsstream": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-text --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=max --memory-limit=1G",
        "psalm": "psalm --show-info=true",
        "cs-check": "php-cs-fixer fix --dry-run --diff --verbose",
        "cs-fix": "php-cs-fixer fix",
        "quality": [
            "@cs-check",
            "@phpstan", 
            "@psalm"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}